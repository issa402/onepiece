{
  "name": "onepiece-ai-llm-integration",
  "version": "1.0.0",
  "description": "One Piece Trading Platform - AI/LLM Integration Learning Module",
  "private": true,
  "scripts": {
    "dev": "tsx watch 01-ai-llm-coding-lab.ts",
    "demo": "tsx 01-ai-llm-coding-lab.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "openai": "^4.20.0",
    "@anthropic-ai/sdk": "^0.9.0",
    "axios": "^1.6.0",
    "dotenv": "^16.3.0",
    "ioredis": "^5.3.0",
    "winston": "^3.11.0",
    "prom-client": "^15.0.0",
    "limiter": "^2.1.0",
    "opossum": "^8.0.0",
    "zod": "^3.22.0",
    "uuid": "^9.0.0",
    "lodash": "^4.17.0",
    "date-fns": "^2.30.0",
    "node-cron": "^3.0.0",
    "ws": "^8.14.0",
    "@types/ws": "^8.5.0"
  },
  "devDependencies": {
    "typescript": "^5.2.0",
    "@types/node": "^20.8.0",
    "@types/uuid": "^9.0.0",
    "@types/lodash": "^4.14.0",
    "tsx": "^4.0.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "eslint": "^8.52.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "prettier": "^3.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "@types/node-cron": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "ai",
    "llm",
    "openai",
    "anthropic",
    "machine-learning",
    "typescript",
    "one-piece",
    "trading-platform",
    "prompt-engineering",
    "streaming-ai"
  ],
  "author": "One Piece Trading Platform Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/onepiece/trading-platform.git",
    "directory": "learning-modules/36-ai-llm-integration"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src", "<rootDir>/tests"],
    "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/*.d.ts",
      "!**/node_modules/**",
      "!**/dist/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint", "prettier"],
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/explicit-function-return-type": "off"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  }
}
